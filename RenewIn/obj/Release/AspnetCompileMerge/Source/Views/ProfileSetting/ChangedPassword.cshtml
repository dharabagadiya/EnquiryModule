@{ var userDetail = (CustomAuthentication.User)ViewData["UserDetail"]; }
@model CustomAuthentication.User
@{
    ViewBag.Title = "Change Password";
}
<div class="breadcrumb left" style="width:50%;">
    <span class=""><a href="@Url.Action("","Home")"> Home </a></span>
    <span class="marg_arrow"><img src="~/images/arrow.png" /></span>
    <span class=""><a href="#"> Changed Password </a></span>
</div>
<div class="container">
    <ul id="tabs">
        <li class="border_tabs"><a href="~/ProfileSetting/MyApplication">My Applications</a></li>
        <li class="border_tabs"><a href="~/ProfileSetting/ProfileDetail">Profile Detail</a></li>
        <li class="border_tabs"><a href="~/ProfileSetting/UploadDocuments">Upload Documents</a> </li>
        <li class="border_tabs"><a href="~/ProfileSetting/Feedback">Feedback</a> </li>
        <li><a href="#ChangedPassword" class="current">Changed Password</a></li>
    </ul>
    <div class="content">
        <div id="ChangedPassword" class="tab_section">
            <h3>Change Password</h3>
            <div class="form_content">
                @using (Html.BeginForm("ChangedPassword", "ProfileSetting"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div>
                        @*<input class="form_input top_15" name="oldPassword" id="oldPassword" type="password" placeholder="Old Password" />*@
                        @Html.TextBoxFor(Model => Model.OldPassword, new { @class = "form_input top_15", @placeholder = "Old Password", @id = "oldPassword", @type = "password"})
                        @Html.ValidationMessageFor(Model => Model.OldPassword, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @*<input class="form_input top_15" name="newPassword" id="newPassword" type="password" placeholder="New Password" />*@
                        @Html.TextBoxFor(Model => Model.Password, new { @class = "form_input top_15", @placeholder = "New Password", @id = "newPassword", @type = "password" })
                        @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @*<input class="form_input top_15" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" />*@
                        @Html.TextBoxFor(Model => Model.ConfirmPassword, new { @class = "form_input top_15", @placeholder = "Confirm Password", @id = "confirmPassword", @type = "password"})
                        @Html.ValidationMessageFor(Model => Model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="button_wid top_55">
                        <button type="submit" class="btn_form">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="clr"></div>
</div>