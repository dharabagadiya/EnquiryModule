@model List<DataModel.Modal.Offer>
@{
    ViewBag.Title = "Index";
}
<div class="breadcrumb left">
    <span class=""><a href="@Url.Action("","Home")"> Home </a></span>
    <span class="marg_arrow"><img src="~/images/arrow.png" /></span>
    <span class=""><a href="#"> View Offers </a></span>
</div>
<div class="container">
    <div class="section" style="width:98% !important;">
        <div class="title"><h1>View Offers </h1></div>
    </div>
    @foreach (var offer in Model)
    {
        <div class="results_container">
            <div class="grid_card">
                <img class="list_thumbnail left" src="@offer.ImagePath" />
                <div class="grid_details left">
                    <h1> @offer.CompanyName </h1>
                    <p class="details">@offer.ImplementationCost </p>
                    <p class="details">@offer.Capacity </p>
                    <p class="details">@offer.ProductName </p>
                    <div class="content_sec">
                        <p>
                            @offer.ProductDescription
                        </p>
                    </div>
                    <div class="clr"></div>
                </div>
                <div class="right_nav left">
                    <div class="padd_left">

                    </div>
                    <div class="list_right">
                        <button class="feedback_btn btn_mar selectOffer" data-offer-id="@offer.OfferID"> Select Offer </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>