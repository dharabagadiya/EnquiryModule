@{
    ViewBag.Title = "Solar";
}
<div class="form_slider_wrapper">
    <span class="prev_slide"></span>
    <span class="next_slide"></span>
    <div class="container">
        <div id="solar_form_slider" class="form_slider">
            <div class="error_tooltip">
                <div class="error_msg"></div>
                <div class="pointer"></div>
            </div>
            <div id="solar_slides_group" class="slides_group">
                <div id="solar_form_slide_1" class="slides">
                    <h1 class="slide_title">Select solar services</h1>
                    <div class="input_frame">
                        <div id="solar_services" class="option_holder radio_options SolarServiceType">
                            <div id="solar_renew_roof_top" class="option_box">
                                <div class="icon margin_icon roof_bg"><div class="solar_renew_img img_size solar_top_img"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Solar Roof Top</h3>
                            </div>
                            <div id="solar_renew_park" class="option_box">
                                <div class="icon margin_icon park_bg"><div class="solar_renew_img img_size solar_park_img"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Solar Park</h3>
                            </div>
                            <div id="solar_renew_pumps" class="option_box">
                                <div class="icon margin_icon pumps_bg"><div class="solar_renew_img img_size solar_pumps_img"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Solar Pumps</h3>
                            </div>
                            <div id="solar_renew_water_heaters" class="option_box">
                                <div class="icon margin_icon water_bg"><div class="solar_renew_img img_size solar_water_img"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Solar Water Heaters</h3>
                            </div>
                            <div id="solar_renew_finance" class="option_box">
                                <div class="icon margin_icon finance_bg"><div class="solar_renew_img img_size solar_equi_img"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Solar Equipments</h3>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>

                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_form_slide_2" class="slides">
                    <h1 class="slide_title">State whether you are</h1>
                    <div class="input_frame">
                        <div id="solar_role" class="option_holder radio_options ApplicantType">
                            <div id="Individuals" class="option_box">
                                <div class="icon margin_icon indivi_img"><div class="bio_indivi_img bioimg_size indivi_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Individuals</h3>
                            </div>
                            <div id="Corporates" class="option_box">
                                <div class="icon margin_icon business_bg"><div class="bio_indivi_img bioimg_size corpor_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Corporates</h3>
                            </div>
                            <div id="Industries" class="option_box">
                                <div class="icon margin_icon pumps_bg"><div class="bio_indivi_img bioimg_size indus_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Industries</h3>
                            </div>
                            <div id="Trusts/Co-Ops" class="option_box">
                                <div class="icon margin_icon others_bg"><div class="bio_indivi_img bioimg_size trusts_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Trusts/Co-Ops</h3>
                            </div>
                            <div id="Govt Organizations" class="option_box">
                                <div class="icon margin_icon park_bg"><div class="bio_indivi_img bioimg_size govt_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Govt Organizations</h3>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>

                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_form_slide_3" class="slides">
                    <h1 class="slide_title">Location of the proposed solar site</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">

                            <div class="icon_input textarea">
                                <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                <textarea id="txtAddress" class="no_label grey_text" placeholder="Address"></textarea>
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                <input id="txtLocation" class="no_label grey_text" type="text" placeholder="Location" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size pin_img"></span></span>
                                <input id="txtPincode" class="no_label grey_text" type="text" placeholder="Pincode" data-minlength="6" maxlength="6" onkeypress="return isNumberKey(event)" />
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_form_slide_4" class="slides">
                    <h1 class="slide_title">Solar System details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">

                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size rs_img"></span></span>
                                <input id="txtMonthlyElectricityBill" class="no_label grey_text" type="text" placeholder="Average Monthly Electricity Bill" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size shadow_img"></span></span>
                                <input id="txtShadowFreeArea" class="no_label grey_text" type="text" placeholder="Shadow free area of Rooftop in sq. mts" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size capacity_img"></span></span>
                                <input id="txtProposedCapacityKW" class="no_label grey_text" type="text" placeholder="Capacity of Solar power plant in kW peak" />
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_form_slide_5" class="slides">
                    <h1 class="slide_title">Contact details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size com_img"></span></span>
                                <input id="txtCompanyName" class="no_label grey_text" type="text" placeholder="Company Name" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size contact_img"></span></span>
                                <input id="txtName" class="no_label grey_text" type="text" placeholder="Contact Person Name" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size email_img"></span></span>
                                <input id="txtEmailEnquiry1" class="no_label grey_text" type="text" placeholder="Email Id" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size mob_img"></span></span>
                                <input id="txtMobileNo" class="no_label grey_text" type="text" placeholder="Mobile Number" />
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>

                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn" id="btnSolarSubmit">Finish</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>