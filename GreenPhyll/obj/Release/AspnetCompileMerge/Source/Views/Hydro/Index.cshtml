
@{
    ViewBag.Title = "Hydro";
}
<div class="breadcrumb left">
    <span class=""><a href="@Url.Action("","Home")"> Home </a></span>
    <span class="marg_arrow"><img src="~/images/arrow.png" /></span>
    <span class=""><a href="@Url.Action("", "Hydro")"> Hydro Power </a></span>
</div>
<div class="form_slider_wrapper">
    <span class="prev_slide"></span>
    <span class="next_slide"></span>
    <div class="container">
        <div id="hydro_form_slider" class="form_slider">
            <div id="hydro_slides_group" class="slides_group">
                <div id="hydro_form_slide_1" class="slides">
                    <h1 class="slide_title">State whether you are</h1>
                    <div class="input_frame">
                        <div id="hydro_services" class="option_holder radio_options ApplicantType">
                            <div id="Individuals" class="option_box">
                                <div class="icon margin_icon indivi_img"><div class="bio_indivi_img bioimg_size indivi_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Individuals</h3>
                            </div>
                            <div id="Corporates" class="option_box">
                                <div class="icon margin_icon business_bg"><div class="bio_indivi_img bioimg_size corpor_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Corporates</h3>
                            </div>
                            <div id="Industries" class="option_box">
                                <div class="icon margin_icon pumps_bg"><div class="bio_indivi_img bioimg_size indus_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Industries</h3>
                            </div>
                            <div id="Trusts/Co-Ops" class="option_box">
                                <div class="icon margin_icon others_bg"><div class="bio_indivi_img bioimg_size trusts_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Trusts/Co-Ops</h3>
                            </div>
                            <div id="Govt Organizations" class="option_box">
                                <div class="icon margin_icon park_bg"><div class="bio_indivi_img bioimg_size govt_bg"></div></div>
                                <span class="selectable"></span>
                                <h3 class="label">Govt Organizations</h3>
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <span id="stateWhether" class="left_arrow" style="margin-left:-7px;"></span>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="hydro_form_slide_2" class="slides">
                    <h1 class="slide_title">Applicant \ organization details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size contact_img"></span></span>
                                    <input id="txtApplicantName" class="no_label grey_text" type="text" placeholder="Name of Applicant \ Organization" />
                                </div>
                                <span id="nameOfApplicant" class="left_arrow" style="margin-left:-132px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size pan_img"></span></span>
                                    <input id="txtPAN" class="no_label grey_text" type="text" placeholder="Parmanent Account Number (PAN)" maxlength="10"/>
                                </div>
                                <span id="PAN" class="left_arrow" style="margin-left:-215px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size cin_img"></span></span>
                                    <input id="txtCIN" class="no_label grey_text" type="text" placeholder="Company Identification Number (CIN)" />
                                </div>
                                <span id="CIN" class="left_arrow" style="margin-left:-212px;"></span>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="hydro_form_slide_3" class="slides">
                    <h1 class="slide_title">Location of the proposed hydro farm</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="MB15">
                                <div class="icon_input textarea">
                                    <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                    <textarea id="txtAddress" class="no_label grey_text" placeholder="Address"></textarea>
                                </div>
                                <span id="add123" class="left_arrow"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                    <input id="txtLocation" class="no_label grey_text" type="text" placeholder="Location" />
                                </div>
                                <span id="loc123" class="left_arrow"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size pin_img"></span></span>
                                    <input id="txtPincode" class="no_label grey_text" type="text" placeholder="Pincode" onkeypress="return isNumberKey(event)" data-minlength="6" maxlength="6"/>
                                </div>
                                <span id="pin123" class="left_arrow" style="margin-left:-130px;"></span>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="hydro_form_slide_4" class="slides">
                    <h1 class="slide_title">Hydro project details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size turbines_img"></span></span>
                                    <input id="txtTotalTurbinesPlanned" class="no_label grey_text" type="text" placeholder="No. of turbines planned"  onkeypress="return isNumberKey(event)" maxlength="10"/>
                                </div>
                                <span id="turbines" class="left_arrow" style="margin-left:-82px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size capacity_img"></span></span>
                                    <input id="txtProposedCapacity" class="no_label grey_text" type="text" placeholder="Capacity of the hydro project"  onkeypress="return isNumberKey(event)" maxlength="10"/>
                                </div>
                                <span id="capacity" class="left_arrow" style="margin-left:-82px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size rs_img"></span></span>
                                    <input id="txtEstimatedProjectCost" class="no_label grey_text" type="text" placeholder="Estimated cost of the project"  onkeypress="return isNumberKey(event)" maxlength="10"/>
                                </div>
                                <span id="cost" class="left_arrow" style="margin-left:-66px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size rs_img"></span></span>
                                    <input id="txtAvgLast3yrTurnOver" class="no_label grey_text" type="text" placeholder="Average turnover in last 3 years"  onkeypress="return isNumberKey(event)" maxlength="10"/>
                                </div>
                                <span id="turnover" class="left_arrow" style="margin-left:-50px;"></span>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="hydro_form_slide_5" class="slides">
                    <h1 class="slide_title">Contact details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size contact_img"></span></span>
                                    <input id="txtName" class="no_label grey_text" type="text" placeholder="Contact Person Name" />
                                </div>
                                <span id="contactName" class="left_arrow" style=" margin-left: -111px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size email_img"></span></span>
                                    <input id="txtEmailHydro" class="no_label grey_text" type="text" placeholder="Email Id" />
                                </div>
                                <span id="email" class="left_arrow" style="margin-left:-195px;"></span>
                            </div>
                            <div class="MB15">
                                <div class="icon_input">
                                    <span class="icon"><span class="sprite_img icon_size mob_img"></span></span>
                                    <input id="txtMobileNo" class="no_label grey_text" type="text" placeholder="Mobile Number" onkeypress="return isNumberKey(event)" maxlength="10" />
                                </div>
                                <span id="mobile" class="left_arrow"></span>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn" id="btnHydroSubmit">Finish</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

