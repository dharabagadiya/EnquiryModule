@{ var userDetail = (CustomAuthentication.User)ViewData["UserDetail"]; }
@{
    ViewBag.Title = "Feedback";
}
<div class="container">
    <ul id="tabs">
        <li class="border_tabs"><a href="~/ProfileSetting/MyApplication">My Applications</a></li>
        <li class="border_tabs"><a href="~/ProfileSetting/ProfileDetail">Profile Detail</a></li>
        <li class="border_tabs"><a href="~/ProfileSetting/UploadDocuments">Upload Documents</a> </li>
        <li><a href="#Feedback" class="current">Feedback</a> </li>
        <li class="border_tabs"><a href="~/ProfileSetting/ChangedPassword">Changed Password</a> </li>
    </ul>
    <div class="content">
        <h3> Feedback </h3>
        <div class="form_content">
            @using (Html.BeginForm("Feedback", "ProfileSetting"))
            {
                <div>
                    <input class="form_input top_15" type="text" placeholder="Feedback / Query / Support Question" id="feedback_question" name="feedback_question"/>
                </div>
                <div>
                    <textarea class="form_input textarea_input top_15" id="feedback_msg" name="feedback_msg" type="text" placeholder="Please let us know your feedback or Suggestion or Type here to ask any support questions." ></textarea>
                </div>
                <div class="button_wid top_55">
                    <button type="submit" class="btn_form">Continue</button>
                </div>
            }
        </div>
    </div>
    <div class="clr"></div>
</div>
