
@{
    ViewBag.Title = "SolarServices";
}

<div class="form_slider_wrapper">
    <span class="prev_slide"></span>
    <span class="next_slide"></span>
    <div class="container">
        <div id="solar_renew_form_slider" class="form_slider">
            <div class="error_tooltip">
                <div class="error_msg"></div>
                <div class="pointer"></div>
            </div>
            <div id="solar_renew_slides_group" class="slides_group">
                <div id="solar_renew_form_slide_1" class="slides">
                    <h1 class="slide_title">Location of the Solar Plant</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="icon_input textarea">
                                <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                <textarea id="solar_renew_address" class="no_label grey_text" placeholder="Address"></textarea>
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size add_img"></span></span>
                                <input id="txtLocation" class="no_label grey_text" type="text" placeholder="Location" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size pin_img"></span></span>
                                <input id="solar_renew_pincode" class="no_label grey_text" type="text" placeholder="Pincode" />
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_renew_form_slide_2" class="slides">
                    <h1 class="slide_title" style="padding:15px 0 15px 0 !important;">Service you are looking for</h1>
                    <div class="input_frame">
                        <div id="ServiceLookingType" class="option_holder radio_options small_options ServiceLookingType">
                            <div id="solar_renew_roof_top" class="option_box">
                                <div class="icon margin_icon roof_bg"><div class="solar_renew_img img_size roof_img"></div></div>
                                <h3 class="label">Solar Roof Top</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_park" class="option_box">
                                <div class="icon margin_icon park_bg"><div class="solar_renew_img img_size park_img"></div></div>
                                <h3 class="label">Solar Farm/Park</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_pumps" class="option_box">
                                <div class="icon margin_icon pumps_bg"><div class="solar_renew_img img_size pumps_img"></div></div>
                                <h3 class="label">Solar Pumps</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_water_heaters" class="option_box">
                                <div class="icon margin_icon water_bg"><div class="solar_renew_img img_size water_img"></div></div>
                                <h3 class="label">Solar Water Heaters</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_finance" class="option_box">
                                <div class="icon margin_icon finance_bg"><div class="solar_renew_img img_size finance_img"></div></div>
                                <h3 class="label">Solar Finance</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_training" class="option_box">
                                <div class="icon margin_icon training_bg"><div class="solar_renew_img img_size training_img"></div></div>
                                <h3 class="label">Solar Training</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_logistics" class="option_box">
                                <div class="icon margin_icon logistic_bg"><div class="solar_renew_img img_size logistic_img"></div></div>
                                <h3 class="label">Logistic Services</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_business" class="option_box">
                                <div class="icon margin_icon business_bg"><div class="solar_renew_img img_size business_img"></div></div>
                                <h3 class="label">Business &amp; Development</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_recruitment" class="option_box">
                                <div class="icon margin_icon staff_bg"><div class="solar_renew_img img_size staff_img"></div></div>
                                <h3 class="label">Staff &amp; Recruitment</h3>
                                <span class="selectable"></span>
                            </div>
                            <div id="solar_renew_other_services" class="option_box">
                                <div class="icon margin_icon others_bg"><div class="solar_renew_img img_size others_img"></div></div>
                                <h3 class="label">Others</h3>
                                <input id="solar_renew_others" type="text" class="input top_10" />
                            </div>
                            <div class="clr"></div>
                        </div>
                    </div>

                    <div class="clr"></div>
                    <div class="btn_area" style="padding-top:20px !important;">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_renew_form_slide_3" class="slides">
                    <h1 class="slide_title">Service request details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="icon_input">
                                <span class="icon"><img src="../images/location_icon_white.png" /></span>
                                <input id="solar_renew_service" class="no_label grey_text" type="text" placeholder="Type Service you are Looking for" />
                            </div>
                            <div class="icon_input textarea">
                                <span class="icon"><span class="sprite_img icon_size item_img"></span></span>
                                <textarea id="solar_renew_msg" class="no_label grey_text" placeholder="Please provide information on your requested item(s)"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn">Continue</button>
                    </div>
                </div>

                <div id="solar_renew_form_slide_4" class="slides">
                    <h1 class="slide_title">Contact details</h1>
                    <div class="input_frame">
                        <div class="input_element_holder multiple_fields">
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size com_img"></span></span>
                                <input id="solar_renew_company_name" class="no_label grey_text" type="text" placeholder="Individual/Company Name" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size contact_img"></span></span>
                                <input id="solar_renew_contact_person" class="no_label grey_text" type="text" placeholder="Contact Person Name" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size email_img"></span></span>
                                <input id="solar_renew_email" class="no_label grey_text" type="text" placeholder="Email Id" />
                            </div>
                            <div class="icon_input">
                                <span class="icon"><span class="sprite_img icon_size mob_img"></span></span>
                                <input id="solar_renew_mobile" class="no_label grey_text" type="text" placeholder="Mobile Number" />
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                    <div class="btn_area">
                        <button class="btn_normal_2 continue_btn" id="btnSolarServices">Finish</button>
                    </div>
                </div>
                <div class="clr"></div>
            </div>
        </div>
    </div>
</div>

