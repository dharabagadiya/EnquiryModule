
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div id="form_slider" class="form_slider">
        <span class="prev_slide"></span>
        <span class="next_slide"></span>
        <div id="slides_group" class="slides_group">
            <div id="form_slide_1" class="slides">
                <h1 class="slide_title">Screen One</h1>
                <div class="option_holder radio_options FirstOption">
                    <div class="option_box">
                        <img class="icon" src="images/option_2_icon.png" />
                        <h3 class="label">Option 1</h3>
                        <span class="selectable"></span>
                    </div>
                    <div class="option_box">
                        <img class="icon" src="images/option_3_icon.png" />
                        <h3 class="label">Option 2</h3>
                        <span class="selectable"></span>
                    </div>
                    <div class="option_box">
                        <img class="icon" src="images/option_4_icon.png" />
                        <h3 class="label">Option 3</h3>
                        <span class="selectable"></span>
                    </div>
                    <div class="option_box">
                        <img class="icon" src="images/option_3_icon.png" />
                        <h3 class="label">Option 4</h3>
                        <span class="selectable"></span>
                    </div>
                    <div class="option_box">
                        <img class="icon" src="images/option_4_icon.png" />
                        <h3 class="label">Option 5</h3>
                        <span class="selectable"></span>
                    </div>
                </div>
                <div class="clr"></div>
                <div class="btn_area">
                    <button class="btn_normal_2 continue_btn">Continue</button>
                </div>
            </div>
            <div id="form_slide_2" class="slides">
                <h1 class="slide_title">What is the Property Address</h1>
                <div class="input_element_holder">
                    <div class="icon_input textarea" style="margin-bottom:15px;">
                        <span class="icon"><img src="images/location_icon_white.png" /></span>
                        <textarea class="no_label grey_text" title="Enter Address" id="txtAddress"></textarea>
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/pin_code_icon.png" /></span>
                        <input class="no_label grey_text" type="text" title="Pincode" id="txtPincode" />
                    </div>
                </div>
                <div class="clr"></div>
                <div class="btn_area">
                    <button class="btn_normal_2 continue_btn">Continue</button>
                </div>
            </div>
            <div id="form_slide_3" class="slides">
                <h1 class="slide_title">Screen Three</h1>
                <div class="input_element_holder multiple_fields">
                    <div class="icon_input">
                        <span class="icon"><img src="images/name_icon.png" /></span>
                        <input class="no_label grey_text" type="text" title="Amet" id="txtCompanyName" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/mobile_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Consectetur" id="txtPAN" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/email_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Adipiscing" id="txtCIN" />
                    </div>
                </div>
                <div class="clr"></div>
                <div class="btn_area">
                    <button class="btn_normal_2 continue_btn">Continue</button>
                </div>
            </div>
            <div id="form_slide_4" class="slides">
                <h1 class="slide_title">Screen Four</h1>
                <div class="input_element_holder multiple_fields">
                    <div class="icon_input">
                        <span class="icon"><img src="images/radio_on.png" /></span>
                        <input class="no_label grey_text" type="text" title="Elit" id="txtElit" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/radio_on.png" /></span>
                        <input class="no_label grey_text" type="text" title="Quisque" id="txtDonec" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/facebook_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Ultrices" id="txtUltrices" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/google_plus_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Lectus" id="txtLectus" />
                    </div>
                </div>
                <div class="clr"></div>
                <div class="btn_area">
                    <button class="btn_normal_2 continue_btn">Continue</button>
                </div>
            </div>
            <div id="form_slide_5" class="slides">
                <h1 class="slide_title">Screen Five</h1>
                <div class="input_element_holder multiple_fields">
                    <div class="icon_input">
                        <span class="icon"><img src="images/name_icon.png" /></span>
                        <input class="no_label grey_text" type="text" title="Name" id="txtName" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/mobile_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Mobile Number" id="txtMobileNo" />
                    </div>
                    <div class="icon_input">
                        <span class="icon"><img src="images/email_icon_white.png" /></span>
                        <input class="no_label grey_text" type="text" title="Email" id="txtEmailEnquiry3" />
                    </div>
                </div>
                <div class="clr"></div>
                <P class="disclaimer_text">
                    We don’t spam or sell your details to annoying people. <br>
                    <input type="checkbox" /> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi dapibus sem pretium nunc semper consectetur. Integer posuere arcu eget mi molestie
                </P>
                <div class="btn_area">
                    <button class="btn_normal_2" id="btnEnquiry3">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

